<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#3ca67d"
    tools:context=".FirstActivityInstructions">

        <View
            android:layout_width="7dp"
            android:layout_height="120dp"
            android:layout_marginTop="400dp"
            android:layout_marginLeft="50dp"
            android:background="#ffffff" />

        <View
            android:layout_width="170dp"
            android:layout_height="7dp"
            android:layout_marginLeft="49dp"
            android:layout_marginTop="400dp"
            android:background="#ffffff" />


        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/yellow_ball"
            android:layout_marginTop="275dp"
            android:layout_marginLeft="80dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step 1"
            android:layout_marginTop="320dp"
            android:layout_marginLeft="100dp"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="#000000"/>

        <View
            android:layout_width="7dp"
            android:layout_height="120dp"
            android:layout_marginTop="280dp"
            android:layout_marginLeft="210dp"
            android:background="#ffffff" />
        <View
            android:layout_width="170dp"
            android:layout_height="7dp"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="273dp"
            android:background="#ffffff" />


        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/orange_ball"
            android:layout_marginTop="140dp"
            android:layout_marginLeft="240dp"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step 2"
            android:layout_marginTop="176dp"
            android:layout_marginLeft="254dp"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="#000000"/>

        <View
            android:layout_width="7dp"
            android:layout_height="124dp"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="370dp"
            android:background="#ffffff" />

        <View
            android:layout_width="153dp"
            android:layout_height="7dp"
            android:layout_marginLeft="370dp"
            android:layout_marginTop="143dp"
            android:background="#ffffff" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/yellow_ball"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="385dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step 3"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="400dp"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="#000000"/>

        <TextView
            android:layout_width="850dp"
            android:layout_height="100dp"
            android:text="Step 1: Take your second step"
            android:id="@+id/headingTV"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="550dp"
            android:textColor="#ffffff"
            android:textSize="40dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Count the Balls by clicking them"
            android:id="@+id/subHeadingTV"
            android:layout_marginTop="600dp"
            android:layout_marginLeft="40dp"
            android:textColor="#ffffff"
            android:textSize="30dp" />
        <Button
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:layout_marginTop="680dp"
            android:layout_marginLeft="90dp"
            android:background="#ff7300"
            android:text="Proceed"
            android:textStyle="bold"
            android:textSize="30dp"
            android:onClick="gotoSecondActivity"
            android:textColor="#ffffff" />

</RelativeLayout>
